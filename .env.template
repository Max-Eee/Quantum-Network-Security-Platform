# Environment Variables Template
# Copy this file to .env and configure with your actual values
# Never commit .env files to version control!

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
DATABASE_PASSWORD=your-secure-database-password
REDIS_PASSWORD=your-redis-password-if-needed

# API Keys (if using external services)
QUANTUM_CLOUD_API_KEY=your-quantum-cloud-api-key
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quantum_network
DB_USERNAME=quantum_user
DB_PASSWORD=your-database-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services
PROMETHEUS_PUSH_GATEWAY=http://localhost:9091
GRAFANA_API_KEY=your-grafana-api-key

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Production Settings (set these for production deployment)
FORCE_HTTPS=false
SECURE_COOKIES=false
MAX_WORKERS=4
MAX_CONNECTIONS=1000

# Quantum Computing Settings
QUANTUM_BACKEND=tensorflow_quantum
MAX_QUBITS=20
NOISE_MODEL=ideal

# Network Configuration
DEFAULT_NETWORK_NODES=5
NETWORK_TOPOLOGY=mesh
MAX_CONNECTION_DISTANCE=100

# Security Settings
QKD_KEY_LENGTH=256
ERROR_THRESHOLD=0.11
CHSH_THRESHOLD=2.0

# AI/ML Settings
ANOMALY_THRESHOLD=0.7
ML_LEARNING_RATE=0.001
